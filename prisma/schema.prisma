generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  Beginner
  Intermediate
  Advanced
}

model Course {
  id          String       @id @default(cuid())
  title       String
  description String
  difficulty  Difficulty?
  createdAt   DateTime     @default(now())
  enrollments Enrollment[]
}

model Enrollment {
  id           String   @id @default(cuid())
  studentEmail String
  coureId      String
  enrolledAt   DateTime @default(now())
  course       Course   @relation(fields: [coureId], references: [id], onDelete: Cascade) // foreign key to Course
}
